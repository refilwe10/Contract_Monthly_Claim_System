@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Edit Lecturer";
}

<div class="container mt-4">
    <h1>Edit Lecturer Details</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="EditLecturer">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="mb-3">
                    <label class="form-label">Email Address (Username)</label>
                    <input type="email" name="email" class="form-control" value="@Model.Email" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Phone Number</label>
                    <input type="tel" name="phoneNumber" class="form-control" value="@Model.PhoneNumber" />
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <a asp-action="Lecturers" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
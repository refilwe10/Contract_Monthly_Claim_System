@model IEnumerable<Contract_Monthly_Claim_System.Models.Claim>

    @{
    ViewData["Title"] = "Payment Invoice";
    }

    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-6">
                <h1>Payment Invoice</h1>
                <h5 class="text-muted">Approved Claims Summary</h5>
            </div>
            <div class="col-6 text-end">
                <p><strong>Date Generated:</strong> @ViewData["GeneratedDate"]</p>
                <p><strong>Generated By:</strong> @User.Identity?.Name</p>
                <button onclick="window.print()" class="btn btn-outline-primary">Print Report</button>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Period</th>
                    <th>Hours</th>
                    <th>Rate</th>
                    <th class="text-end">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
            {
                <tr>
                    <td>#@claim.ClaimId</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.ClaimPeriod.ToString("MMM yyyy")</td>
                    <td>@claim.HoursWorked.ToString("F2")</td>
                    <td>@claim.HourlyRate.ToString("C")</td>
                    <td class="text-end fw-bold">@claim.Amount.ToString("C")</td>
                </tr>
            }
            </tbody>
            <tfoot>
                <tr class="table-success">
                    <td colspan="5" class="text-end fw-bold fs-5">Grand Total Payable:</td>
                    <td class="text-end fw-bold fs-5">@string.Format("{0:C}", ViewData["GrandTotal"])</td>
                </tr>
            </tfoot>
        </table>

        @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No approved claims found for this period.
        </div>
    }
    </div>
